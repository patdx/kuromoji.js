{
	"include": ["./src/**/*.js", "./test/**/*", "./demo/**/*"],
	"compilerOptions": {
		"allowJs": true,

		"noImplicitAny": false,
		"noEmit": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ESNext",
		"types": ["node", "vite/client", "vitest/globals"],
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	}
}
